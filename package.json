{
  "name": "bestwishes",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.8.3",
    "@emotion/react": "^11.7.0",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.14.8",
    "@mui/material": "^5.14.8",
    "firebase": "^10.3.1",
    "graphql": "^16.6.0",
    "ramda": "^0.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.1",
    "react-router-dom": "^6.15.0",
    "styled-components": "^5.2.1"
  },
  "scripts": {
    "serve": "vite preview",
    "build": "vite build",
    "start": "env-cmd --file ./.env-local.json vite"
  },
  "eslintConfig": {
    "extends": [
      "prettier",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended"
    ],
    "plugins": [
      "eslint-plugin-prettier",
      "react-refresh"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "react-refresh/only-export-components": [
        "warn",
        {
          "allowConstantExport": true
        }
      ]
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "18.2"
      }
    },
    "ignorePatterns": [
      "dist"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.4",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "prettier": "2.2.1",
    "vite": "^4.4.9"
  }
}
